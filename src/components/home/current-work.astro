---
import experiences from "../../collections/experiences.json";
const current = experiences[0];
---

<section class="max-w-4xl mx-auto px-5 sm:px-7 lg:px-0">
  <div class="w-full max-w-4xl mx-auto xl:px-0">
    <div class="relative border border-transparent border-dashed p-4 group rounded-2xl">
      <div class="absolute inset-0 z-20 w-full h-full bg-white border border-dashed dark:bg-pnw-sea-950 rounded-2xl border-pnw-sea-300 dark:border-pnw-sea-600" />
      <div class="absolute inset-0 z-10 w-full h-full border border-dashed rounded-2xl border-pnw-sea-300 dark:border-pnw-sea-600" />
      <div class="relative z-30 flex flex-row items-center gap-4 min-h-[4rem]">
        <img src={current.logo} class="w-12 h-12 flex-shrink-0 rounded-lg object-contain" alt={current.company} />
        <div class="flex-1">
          <h2 class="text-base font-bold leading-tight tracking-tight sm:text-lg text-pnw-sea-700 dark:text-pnw-sea-200">
            {current.role} <span class="font-normal text-pnw-sea-500 dark:text-pnw-sea-400">@ {current.company}</span>
          </h2>
          <p class="text-sm text-pnw-sea-700 dark:text-pnw-sea-200 mt-1">{current.description}</p>
          <p class="text-xs text-pnw-sea-500 dark:text-pnw-sea-400 mt-1">{current.dates}</p>
        </div>
      </div>
    </div>
  </div>
</section>
