---
import playlists from "../../collections/playlists.json";
const playlistIds = playlists.spotify.slice(0, 3);
---

<section class="max-w-4xl mx-auto px-5 sm:px-7 lg:px-0">
  <div class="w-full max-w-4xl mx-auto xl:px-0">
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      {
        playlistIds.map((id) => (
          <div class="overflow-hidden rounded-2xl border border-dashed border-pnw-sea-300 dark:border-pnw-sea-600">
            <iframe
              src={`https://open.spotify.com/embed/playlist/${id}?utm_source=generator&theme=0`}
              width="100%"
              height="352"
              frameborder="0"
              allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy"
              class="rounded-2xl"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
