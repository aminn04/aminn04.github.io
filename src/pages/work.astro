---
import experiences from "../collections/experiences.json";
import AboutExperience from "../components/about-experience.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Amin Ali - Vancouver, Canada">
  <section class="relative z-20 max-w-2xl mx-auto mt-16 sm:mt-24 mb-12 px-5 sm:px-7 lg:px-0">
    <PageHeading
      title="My Experience"
    />

    <div class="flex items-center gap-5 mt-4 mb-6">
      <img src="/assets/images/tools/dbt.png" alt="dbt Labs" class="w-8 h-8" title="dbt Labs" />
      <img src="/assets/images/tools/snowflake.png" alt="Snowflake" class="w-8 h-8" title="Snowflake" />
      <img src="/assets/images/tools/bigquery.svg" alt="BigQuery" class="w-8 h-8" title="BigQuery" />
      <img src="/assets/images/tools/omni.png" alt="Omni Analytics" class="w-8 h-8" title="Omni Analytics" />
      <img src="/assets/images/tools/hex.png" alt="Hex" class="w-8 h-8" title="Hex" />
    </div>

    <p
      class="text-sm leading-6 text-pnw-sea-700 dark:text-pnw-sea-200 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      Senior Analytics Engineer with deep expertise in <span class="font-semibold">analytics architecture</span>, <span class="font-semibold">data modeling</span>, and <span class="font-semibold">embedded reporting</span> â€” powered by the modern data stack.
      <br /><br />
      I sit at the intersection of data engineering and analytics, designing scalable data products that unlock self-serve insights and drive data-informed decisions across the organization.
    </p>

    <div class="px-5 py-10">
      {
        experiences.map((experience) => {
          return (
            <div class="pb-10 border-l border-pnw-sea-200 last:border-l-0 dark:border-pnw-sea-700">
              <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
              />
            </div>
          )
        })
      }
    </div>

    <h2 class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 text-pnw-sea-700 dark:text-pnw-sea-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-pnw-sea-700 dark:text-pnw-sea-200 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work be sure to <a
        href="https://www.linkedin.com/in/aminnali/"
        target="_blank"
        class="text-pnw-sea-500 underline hover:text-pnw-sea-600 dark:text-pnw-sea-400 dark:hover:text-pnw-sea-300">connect with me on LinkedIn</a
      >, or you can send me an <a href="mailto:aminali@fastmail.com" class="text-pnw-sea-500 underline hover:text-pnw-sea-600 dark:text-pnw-sea-400 dark:hover:text-pnw-sea-300"
        >email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
