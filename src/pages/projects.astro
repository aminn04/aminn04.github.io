---
import projects from "../collections/projects.json";
import PageHeading from "../components/page-heading.astro";
import Project from "../components/project.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Amin Ali - Vancouver, Canada">
  <section class="relative z-20 max-w-4xl mx-auto mt-16 sm:mt-24 mb-12 px-5 sm:px-7 lg:px-0">
    <PageHeading title="My Projects" />
    <div class="z-50 grid items-stretch w-full grid-cols-1 gap-7 mt-10"
    >
      {
        projects.map((project) => {
          return (
            <Project
              name={project.name}
              description={project.description}
              image={project.image}
              url={project.url}
            />
          )
        })
      }
    </div>

    <h2 class="mt-16 mb-2 text-2xl font-bold lg:mt-20 sm:mt-16 text-pnw-sea-700 dark:text-pnw-sea-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-pnw-sea-700 dark:text-pnw-sea-200 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to check out more of my projects be sure to <a
        href="https://github.com/aminn04"
        target="_blank"
        class="text-pnw-sea-500 underline hover:text-pnw-sea-600 dark:text-pnw-sea-400 dark:hover:text-pnw-sea-300">follow me on GitHub</a
      >, or you can send me an <a href="mailto:aminali@fastmail.com" class="text-pnw-sea-500 underline hover:text-pnw-sea-600 dark:text-pnw-sea-400 dark:hover:text-pnw-sea-300"
        >email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
